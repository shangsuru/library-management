<div class="field">
  <% input_style = "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600" %>
  <%= f.label field_name, class: "block text-sm mt-4 mb-2 dark:text-white" %>

  <% if field_name == :password or field_name == :current_password %>
    <%= f.password_field field_name, autocomplete: "current-password", class: input_style %>
  <% elsif field_name == :password_confirmation or field_name == :new_password %>
    <%= f.password_field field_name == :new_password ? :password : field_name, autocomplete: "new-password", class: input_style %>
  <% elsif field_name == :details %>
    <%= f.text_area field_name, autofocus: true, autocomplete: "details", class: input_style %>
  <% else %>
    <%= f.text_field field_name, autofocus: true, autocomplete: field_name.to_s, class: input_style %>
  <% end %>
</div>
