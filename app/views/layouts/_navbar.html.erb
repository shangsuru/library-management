<nav class="bg-white shadow" data-controller="drop-down" data-drop-down-options-open-value="false" data-drop-down-hidden-classes-value='["hidden"]' data-drop-down-visible-classes-value='[]'>
  <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8 border-b border-gray-300">
    <div class="relative flex h-16 justify-between">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <button type="button" class="relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500" aria-controls="mobile-menu" aria-expanded="false" data-action="drop-down#toggleOptions">
          <span class="absolute -inset-0.5"></span>
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-drop-down-target="open">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
          <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-drop-down-target="close">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="flex flex-1 md:flex-none items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex flex-shrink-0 items-center">
          <%= image_tag "logo.png", class: "h-12 w-auto", alt: "Money Forward Logo" %>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          <% current_nav = "border-indigo-500 text-gray-900" %>
          <% default_nav = "border-transparent text-gray-500 hover border-gray-300 hover:text-gray-700" %>
          <% common_nav  = "inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium" %>
          <%= link_to "Home", root_path, class: (current_page?(root_path) ? current_nav : default_nav) + " " + common_nav %>
          <%= link_to "Discover", books_path, class: (current_page?("#") ? current_nav : default_nav) + " " + common_nav %>
          <%= link_to "Categories", "#", class: (current_page?("#") ? current_nav : default_nav) + " " + common_nav %>
          <%= link_to "About", "#", class: (current_page?("#") ? current_nav : default_nav) + " " + common_nav %>
        </div>
      </div>
      <div class="hidden md:flex flex-1 items-center justify-center px-2 md:ml-6 md:justify-end">
        <div class="w-full max-w-lg md:max-w-xs">
          <label for="search" class="sr-only">Search</label>
          <div class="relative">
            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
              <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
              </svg>
            </div>
            <%= search_form_for @q, url: search_books_path do |search_form| %>
            <%=   search_form.search_field :title_or_author_or_isbn_cont, class: "block w-full rounded-md border-0 bg-white py-1.5 pl-10 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "Search books" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
        <%= link_to books_path, class: "block relative rounded-full bg-white p-1 mr-3 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 md:hidden" do %>
          <svg class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <% if user_signed_in? %>
        <button type="button" class="relative rounded-full bg-white p-1 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
          <span class="absolute -inset-1.5"></span>
          <span class="sr-only">View notifications</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
          </svg>
        </button>

        <div class="relative ml-3" data-controller="drop-down" data-drop-down-options-open-value="false" data-drop-down-hidden-classes-value='["opacity-0", "scale-0", "ease-in", "duration-75"]' data-drop-down-visible-classes-value='["opacity-100", "scale-100", "ease-out", "duration-100"]'>
          <div>
            <button type="button" class="relative flex rounded-full bg-white text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" id="user-menu-button" aria-expanded="false" aria-haspopup="true" data-action="drop-down#toggleOptions">
              <span class="absolute -inset-1.5"></span>
              <span class="sr-only">Open user menu</span>
              <% if current_user.avatar_url? %>
                <%= image_tag current_user.avatar_url, class: "h-8 w-8 rounded-full" %>
              <% else %>
                <%= image_tag "https://ui-avatars.com/api/?name=Money+Forward&background=E0740F&color=FFF", class: "h-8 w-8 rounded-full" %>
              <% end %>
            </button>
          </div>

          <div class="opacity-0 scale-0 transition ease-in duration-75 absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1" data-drop-down-target="options">
            <% common_nav = "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <%= link_to "Profile", user_path, class: common_nav, role: "menuitem", tabindex: "-1" %>
            <%= link_to "Borrowing", borrowings_path, class: common_nav, role: "menuitem", tabindex: "-1" %>
            <%= link_to "History", history_path, class: common_nav, role: "menuitem", tabindex: "-1" %>
            <%= link_to "Sign out", destroy_user_session_path, class: common_nav, role: "menuitem", tabindex: "-1", data: {turbo_method: :delete} %>
          </div>
        </div>
        <% else %>
        <%= link_to "Login", new_user_session_path, class: "relative inline-flex items-center gap-x-1.5 rounded-md bg-indigo-400 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="hidden sm:hidden" id="mobile-menu" data-drop-down-target="options">
    <div class="space-y-1 pb-4 pt-2">
      <% current_nav = "bg-indigo-50 border-indigo-500 text-indigo-700" %>
      <% default_nav = "border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700" %>
      <% common_nav  = "block border-l-4 py-2 pl-3 pr-4 text-base font-medium" %>
      <%= link_to "Home", root_path, class: (current_page?(root_path) ? current_nav : default_nav) + " " + common_nav %>
      <%= link_to "Discover", books_path, class: (current_page?("#") ? current_nav : default_nav) + " " + common_nav %>
      <%= link_to "Categories", "#", class: (current_page?("#") ? current_nav : default_nav) + " " + common_nav %>
      <%= link_to "About", "#", class: (current_page?("#") ? current_nav : default_nav) + " " + common_nav %>
    </div>
  </div>
</nav>
