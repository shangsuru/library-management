<div class="group relative border-b border-r border-gray-200 p-4 sm:p-6">
  <div class="aspect-book overflow-hidden rounded-lg bg-gray-200 group-hover:opacity-75">
    <%= image_tag book.image, class: "h-full w-full object-cover object-center" %>
  </div>
  <div class="pb-4 pt-10 text-center">
    <h3 class="text-sm font-medium text-gray-900">
      <%= link_to book_path(book) do %>
        <span aria-hidden="true" class="absolute inset-0"></span>
        <%= book.title %>
      <% end %>
    </h3>
    <div class="mt-3 flex flex-col items-center">
      <p class="mt-1 text-sm text-gray-500 line-clamp-2"><%= book.description %></p>
    </div>
    <p class="mt-4 text-base font-medium text-gray-900"><%= book.author %></p>
  </div>
</div>
