<% label_style = "block text-sm font-medium mb-2 dark:text-white"
    button_style = "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600"
    label_upload_style = "sr-only"
    button_upload_style = "block w-full text-sm text-gray-500
      file:me-4 file:py-2 file:px-4
      file:rounded-lg file:border-0
      file:text-sm file:font-semibold
      file:bg-blue-600 file:text-white
      hover:file:bg-blue-700
      file:disabled:opacity-50 file:disabled:pointer-events-none
      dark:file:bg-blue-500
      dark:hover:file:bg-blue-400"
      submit_button_style = "cursor-pointer mt-5 w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600"
%>
<main class="w-full max-w-md mx-auto p-6">
  <div
    class="mt-7 bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700"
  >
    <div class="p-4 sm:p-7">
      <div class="text-center">
        <h1 class="block text-2xl font-bold text-gray-800 dark:text-white">
        Edit Book
        </h1>
      </div>

        <%= form_with model: @book, url: librarian_book_path(@book) do |form| %>
            <div>
              <%= form.label :title, class: label_style %>
              <%= form.text_field :title, class: button_style %>
            </div>

            <div>
              <%= form.label :author, class: label_style %>
              <%= form.text_field :author, class: button_style %>
            </div>

            <div>
              <%= form.label :description, class: label_style %>
              <%= form.text_field :description, class: button_style %>
            </div>

            <div>
              <%= form.label :isbn, class: label_style %>
              <%= form.text_field :isbn, class: button_style %>
            </div>
            <div>
              <%= form.label :category_id, class: label_style %>
              <%= form.collection_select :category_id, Category.all, :id, :name, prompt: true, class: button_style %>
            </div>

            <div>
              <%= form.label :image, class: label_style %>
              <%= form.label :image, class: label_upload_style %>
              <%= form.file_field :image, class: button_upload_style %>
            </div>

          <%= form.submit "Edit", :class => submit_button_style %>

        <% end %>
    </div>
  </div>
</main>

